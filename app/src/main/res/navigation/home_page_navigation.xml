<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_page_navigation"
    app:startDestination="@id/homePageFragment">

    <fragment
        android:id="@+id/homePageFragment"
        android:name="com.example.a21go.Ui.HomePageFragment"
        android:label="fragment_home_page"
        tools:layout="@layout/fragment_home_page" />
    <fragment
        android:id="@+id/statsFragment"
        android:name="com.example.a21go.Ui.StatsFragment"
        android:label="StatsFragment" />
    <fragment
        android:id="@+id/communityForum"
        android:name="com.example.a21go.Ui.CommunityForum"
        android:label="CommunityForum" >
        <action
            android:id="@+id/action_communityForum_to_communityForumPost"
            app:destination="@id/communityForumPost"
            app:popUpTo="@id/homePageFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/communityForumPost"
        android:name="com.example.a21go.Ui.CommunityForumPost"
        android:label="CommunityForumPost" >
        <action
            android:id="@+id/action_communityForumPost_to_communityForum"
            app:destination="@id/communityForum"
            app:popUpTo="@id/home_page_navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/categoryChoose2"
        android:name="com.example.a21go.Ui.CategoryChoose"
        android:label="CategoryChoose" />
    <fragment
        android:id="@+id/journalsPost"
        android:name="com.example.a21go.Ui.JournalsPost"
        android:label="JournalsPost" >
        <action
            android:id="@+id/action_journalsPost_to_notesAndJournals"
            app:destination="@id/notesAndJournals"
            app:popUpTo="@id/homePageFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/notesAndJournals"
        android:name="com.example.a21go.Ui.NotesAndJournals"
        android:label="NotesAndJournals" >
        <action
            android:id="@+id/action_notesAndJournals_to_journalsPost"
            app:destination="@id/journalsPost"
            app:popUpTo="@id/homePageFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/about21Go"
        android:name="com.example.a21go.Ui.About21Go"
        android:label="About21Go" />
    <fragment
        android:id="@+id/privacyPolicy"
        android:name="com.example.a21go.Ui.PrivacyPolicy"
        android:label="PrivacyPolicy" />
</navigation>